<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.mattia.flickclient.View.MainActivity">

    <com.android.mattia.flickclient.View.TabletView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <fragment android:id="@+id/flickr_search_fragment"
        android:name="com.android.mattia.flickclient.View.FlickrSearchFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent" android:layout_weight="2" />

    <fragment android:id="@+id/picture_list_fragment"
        android:name="com.android.mattia.flickclient.View.PictureListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent" android:layout_weight="3" />
    </com.android.mattia.flickclient.View.TabletView>
</FrameLayout>
